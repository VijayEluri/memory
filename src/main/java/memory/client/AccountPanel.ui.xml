<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">
  <ui:style type="memory.client.AccountPanel.Styles" field="_styles">
    .header {
      font-family: Trebuchet MS, serif;
      font-size: 24px;
    }
    .title {
      font-family: Trebuchet MS, serif;
      font-size: 18px;
      margin-top: 10px;
    }
    .nickname {
      font-weight: bold;
    }
    .cortexen div {
      display: inline;
    }
    .none {
      color: #666666;
    }
  </ui:style>

  <g:HTMLPanel>
    <div class="{_styles.header}">Your account:</div>

    <div class="{_styles.title}">User</div>
    <div>
      Logged in as: <g:InlineLabel ui:field="_nickname" styleName="{_styles.nickname}"/>
      <g:Button ui:field="_logout">Logout</g:Button>
    </div>

    <div class="{_styles.title}">Cortices</div>
    <table>
    <tr><td align="right">Read/write:</td>
        <td><g:FlowPanel styleName="{_styles.cortexen}" ui:field="_readWrite"/></td></tr>
    <tr><td align="right">Read-only:</td>
        <td><g:FlowPanel styleName="{_styles.cortexen}" ui:field="_readOnly"/></td></tr>

    <tr><td>Create cortex:</td>
        <td><g:TextBox ui:field="_name" visibleLength="20"/>
            <g:Button ui:field="_create">Create</g:Button></td></tr>
    </table>

  </g:HTMLPanel>
</ui:UiBinder>
